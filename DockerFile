FROM debian:bullseye-slim

# Use Debian archive server for older packages
RUN sed -i 's|http://deb.debian.org/debian|http://archive.debian.org/debian|g' /etc/apt/sources.list && \
    sed -i '/security.debian.org/d' /etc/apt/sources.list && \
    apt-get update || true

# Install curl and gnupg2 for repo setup
RUN apt-get update && \
    apt-get install -y --fix-missing curl gnupg2 apt-transport-https

# Add Tailscale APT repo without GPG verification
RUN echo "deb [trusted=yes] https://pkgs.tailscale.com/stable/debian bullseye main" \
    > /etc/apt/sources.list.d/tailscale.list

# Install Tailscale
RUN apt-get update && \
    apt-get install -y --fix-missing tailscale && \
    apt-get clean

# Run tailscaled in userspace networking mode with persistent state
CMD ["tailscaled", "--state=/var/lib/tailscale/tailscaled.state", "--tun=userspace-networking"]
